[
  {
    "id": "main",
    "components": [
      "section"
    ]
  },
  {
    "id": "section",
    "components": [
      "text",
      "image",
      "button",
      "primary-button",
      "title",
      "hero",
      "card-list",
      "card",
      "columns",
      "fragment"
    ]
  },
  {
    "id": "richtext",
    "rte": {
      "toolbar": {
        "format": [
          "bold",
          "italic"
        ],
        "blocks": [
          "paragraph",
          "h1",
          "h2"
        ],
        "list": [
          "bullet_list",
          "ordered_list"
        ],
        "insert": [
          "link",
          "unlink"
        ],
        "sections": [
          "format",
          "blocks",
          "list",
          "insert"
        ]
      },
      "actions": {
        "bold": {
          "tag": "strong",
          "shortcut": "Mod-B",
          "label": "Bold"
        },
        "italic": {
          "tag": "em",
          "shortcut": "Mod-I"
        },
        "bullet_list": {
          "wrapInParagraphs": true,
          "label": "Bullet List"
        },
        "ordered_list": {
          "wrapInParagraphs": false
        },
        "link": {
          "hideTarget": false,
          "shortcut": "Mod-K",
          "label": "Add Link"
        },
        "unlink": {
          "label": "Remove Link"
        },
        "h1": {
          "shortcut": "Mod-Alt-1",
          "label": "Main Heading"
        }
      }
    },
    "components": [
      "richtext"
    ]
  },
  {
    "id": "icon-button",
    "title": "Icon Button",
    "condition": {
      "===": [
        {
          "var": "component"
        },
        "icon-button"
      ]
    }
  },
  {
    "id": "link-button",
    "title": "Link Button",
    "condition": {
      "===": [
        {
          "var": "component"
        },
        "link-button"
      ]
    }
  },
  {
    "id": "card-list",
    "components": [
      "card-item"
    ]
  },
  {
    "id": "card",
    "title": "Card",
    "condition": {
      "===": [
        {
          "var": "component"
        },
        "card"
      ]
    }
  },
  {
    "id": "columns",
    "components": [
      "column"
    ]
  },
  {
    "id": "column",
    "components": [
      "text",
      "image",
      "button",
      "title"
    ]
  },
  {
    "id": "card-molecule",
    "title": "Card (Molecules)",
    "condition": {
      "===": [
        {
          "var": "component"
        },
        "card-molecule"
      ]
    }
  },
  {
    "id": "cards",
    "title": "Cards",
    "condition": {
      "===": [
        {
          "var": "component"
        },
        "cards"
      ]
    }
  }
]