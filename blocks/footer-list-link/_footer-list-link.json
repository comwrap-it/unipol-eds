        {
          "component": "text",
          "name": "footerListLinkText",
          "label": "Testo Link",
          "condition": { "===": [{"var" : "hideTitleListLink"}, false] }
        },
        {
          "component": "aem-content",
          "name": "footerListLinkHref",
          "label": "Link URL",
          "condition": { "===": [{"var" : "hideTitleListLink"}, false] }
