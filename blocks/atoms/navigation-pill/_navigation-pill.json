{
  "definitions": [
    {
      "title": "Navigation Pill",
      "id": "navigation-pill",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Navigation Pill",
              "model": "navigation-pill"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "navigation-pill",
      "fields": [
        {
          "component": "select",
          "name": "cta1_Type",
          "value": "primary",
          "label": "First CTA Type",
          "description": "'Primary' will render a filled blue CTA, 'Secondary' will render a white CTA with a black border and black text, 'Tertiary' will render a filled black CTA, and 'Custom' will render a CTA with a custom hex color background.",
          "valueType": "string",
          "options": [
            {
              "name": "Primary",
              "value": "primary"
            },
            {
              "name": "Custom",
              "value": "custom"
            }
          ]
        },
        {
          "condition": {
            "===": [{ "var": "cta1_Type" }, "custom"]
          },
          "component": "select",
          "name": "cta1_customBgColor",
          "value": "",
          "label": "First CTA Background Color",
          "description": "Select First CTA background color. Select 'Custom Hexcode' to enter the custom color",
          "valueType": "string",
          "options": [
            {
              "name": "Adobe Red",
              "value": "--non-spectrum-adobe-red"
            },
            {
              "name": "Custom Hexcode",
              "value": "custom-hexcode"
            }
          ]
        },
        {
          "condition": {
            "and": [
              { "===": [{ "var": "cta1_customBgColor" }, "custom-hexcode"] },
              { "===": [{ "var": "cta1_Type" }, "custom"] }
            ]
          },
          "component": "text",
          "valueType": "string",
          "name": "cta1_customBgHexCode",
          "value": "",
          "label": "First CTA Custom Background Hexcode",
          "description": "Enter the custom hex code, such as FFFFFF (without the # symbol). Please ensure to follow the Adobe style guides when selecting CTA Colors"
        },
        {
          "component": "select",
          "name": "navigationPillVariant",
          "label": "Variant",
          "value": "primary",
          "options": [
            {
              "name": "Primary",
              "value": "primary"
            },
            {
              "name": "Secondary",
              "value": "secondary"
            }
          ]
        },
        {
          "component": "aem-content",
          "name": "navigationPillHref",
          "label": "Link URL",
          "description": "Optional URL the pill points to"
        },
        {
          "component": "select",
          "name": "navigationPillLeftIcon",
          "label": "Left Icon",
          "description": "Optional icon on the left",
          "options": [
            {
              "name": "None",
              "value": ""
            },
            {
              "name": "Chevron Left",
              "value": "un-icon-chevron-left"
            },
            {
              "name": "Chevron Right",
              "value": "un-icon-chevron-right"
            },
            {
              "name": "Search Icon",
              "value": "un-icon-search"
            }
          ]
        },
        {
          "component": "select",
          "name": "navigationPillLeftIconSize",
          "label": "Size",
          "value": "medium",
          "options": [
            {
              "name": "Small",
              "value": "small"
            },
            {
              "name": "Medium",
              "value": "medium"
            },
            {
              "name": "Large",
              "value": "large"
            },
            {
              "name": "Extra Large",
              "value": "extra-large"
            }
          ]
        },
        {
          "component": "select",
          "name": "navigationPillRightIcon",
          "label": "Right Icon",
          "description": "Optional icon on the right",
          "options": [
            {
              "name": "None",
              "value": ""
            },
            {
              "name": "Chevron Left",
              "value": "chevron-left"
            },
            {
              "name": "Chevron Right",
              "value": "chevron-right"
            },
            {
              "name": "Search",
              "value": "search-icon"
            }
          ]
        },
        {
          "component": "select",
          "name": "navigationPillRightIconSize",
          "label": "Size",
          "value": "medium",
          "options": [
            {
              "name": "Small",
              "value": "small"
            },
            {
              "name": "Medium",
              "value": "medium"
            },
            {
              "name": "Large",
              "value": "large"
            },
            {
              "name": "Extra Large",
              "value": "extra-large"
            }
          ]
        }
      ]
    }
  ],
  "filters": []
}
