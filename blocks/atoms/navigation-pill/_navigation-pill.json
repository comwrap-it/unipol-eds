{
  "definitions": [
    {
      "title": "Navigation Pill",
      "id": "navigation-pill",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Navigation Pill",
              "model": "navigation-pill"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "navigation-pill",
      "fields": [
        {
          "component": "select",
          "name": "navigationPillTypology",
          "valueType": "string",
          "value": "custom",
          "label": "Tipologia Destinazione",
          "options": [
            { "name": "Custom", "value": "custom" },
            { "name": "Preventivatore", "value": "preventivatore" },
            { "name": "Locator", "value": "locator" }
          ]
        },
        {
          "component": "text",
          "name": "navigationPillLabel",
          "label": "Configurazione label navigation pill",
          "required": true
        },
        {
          "component": "select",
          "name": "navigationPillVariant",
          "label": "Variant",
          "value": "primary",
          "options": [
            {
              "name": "Primary",
              "value": "primary"
            },
            {
              "name": "Secondary",
              "value": "secondary"
            }
          ]
        },
        {
          "component": "aem-content",
          "name": "navigationPillHref",
          "label": "Link URL",
          "condition": {
            "===": [{ "var": "navigationPillTypology" }, "custom"]
          }
        },
        {
          "component": "boolean",
          "label": "Apri in una nuova scheda",
          "description": "Attivo: il bottone aprir√† il link in una nuova scheda",
          "name": "navPillOpenInNewTab",
          "valueType": "boolean",
          "value": false,
          "condition": {
            "===": [{ "var": "navigationPillTypology" }, "custom"]
          }
        },
        {
          "component": "boolean",
          "label": "Icona Sinistra",
          "description": "Attivo: mostra la configurazione dell'icona sinistra.",
          "name": "showNavPillLeftIcon",
          "valueType": "boolean",
          "value": false
        },
        {
          "component": "boolean",
          "label": "Icona Destra",
          "description": "Attivo: mostra la configurazione dell'icona destra.",
          "name": "showNavPillRightIcon",
          "valueType": "boolean",
          "value": false
        },
        {
          "component": "select",
          "name": "navigationPillLeftIcon",
          "label": "Configurazione icona sinistra",
          "options": [
            {
              "name": "Chevron Left",
              "value": "un-icon-chevron-left"
            },
            {
              "name": "Chevron Right",
              "value": "un-icon-chevron-right"
            },
            {
              "name": "Search Icon",
              "value": "un-icon-search"
            }
          ],
          "condition": {
            "===": [{ "var": "showNavPillLeftIcon" }, true]
          }
        },
        {
          "component": "select",
          "name": "navigationPillLeftIconSize",
          "label": "Dimensione icona sinistra",
          "value": "medium",
          "options": [
            {
              "name": "Small",
              "value": "small"
            },
            {
              "name": "Medium",
              "value": "medium"
            },
            {
              "name": "Large",
              "value": "large"
            },
            {
              "name": "Extra Large",
              "value": "extra-large"
            }
          ],
          "condition": {
            "===": [{ "var": "showNavPillLeftIcon" }, true]
          }
        },
        {
          "component": "select",
          "name": "navigationPillRightIcon",
          "label": "Configurazione icona destra",
          "options": [
            {
              "name": "Chevron Left",
              "value": "chevron-left"
            },
            {
              "name": "Chevron Right",
              "value": "chevron-right"
            },
            {
              "name": "Search",
              "value": "search-icon"
            }
          ],
          "condition": {
            "===": [{ "var": "showNavPillRightIcon" }, true]
          }
        },
        {
          "component": "select",
          "name": "navigationPillRightIconSize",
          "label": "Dimensione icona destra",
          "value": "medium",
          "options": [
            {
              "name": "Small",
              "value": "small"
            },
            {
              "name": "Medium",
              "value": "medium"
            },
            {
              "name": "Large",
              "value": "large"
            },
            {
              "name": "Extra Large",
              "value": "extra-large"
            }
          ],
          "condition": {
            "===": [{ "var": "showNavPillRightIcon" }, true]
          }
        }
      ]
    }
  ],
  "filters": []
}
