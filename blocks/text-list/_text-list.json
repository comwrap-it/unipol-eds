    {
      "title": "Text-Link",
      "id": "text-link",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Text-Link",
              "model": "text-link"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "text-link",
      "fields": [
        {
          "component": "boolean",
          "label": "Mostra Testo o Link",
          "description": "Attivo: mostra la configurazione Titolo/ Testo. Disattivo: mostra la configurazione link.",
          "name": "hideTextLinkList",
          "valueType": "boolean"
        },
        {
          "component": "text",
          "label": "Testo Elenco",
          "name": "listLinks",
          "valueType": "string",
          "validation": {
            "maxLength": 25,
            "customErrorMsg": "Testo troppo lungo (max 25 caratteri)"
          },
          "condition": { "===": [{"var" : "hideTextLinkList"}, true] }
        },
        {
          "component": "text",
          "name": "linkTextComp",
          "label": "Testo Link",
          "validation": {
            "maxLength": 45,
            "customErrorMsg": "Testo troppo lungo (max 45 caratteri)"
          },
          "required": true,
          "condition": { "===": [{"var" : "hideTextLinkList"}, false] }
        },
        {
          "component": "aem-content",
          "name": "linkHrefComp",
          "label": "Link URL",
          "required": true,
          "condition": { "===": [{"var" : "hideTextLinkList"}, false] }
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "text-list",
      "components": [
        "text-link"
      ]
    }
  ]
