{
  "definitions": [
    {
      "title": "Category Card",
      "id": "category-card",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Category Card",
              "model": "category-card",
              "filter": "category-card"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "category-card",
      "fields": [
        {
          "component": "text",
          "name": "title",
          "label": "Titolo",
          "required": true,
          "validation": {
            "maxLength": 25,
            "customErrorMsg": "Titolo troppo lungo (max 25 caratteri)"
          }
        },
        {
          "component": "text",
          "name": "description",
          "label": "Descrizione",
          "required": true,
          "validation": {
            "maxLength": 130,
            "customErrorMsg": "Descrizione troppo lunga (max 130 caratteri)"
          }
        },
        {
          "component": "text",
          "name": "note",
          "label": "Note",
          "required": true,
          "validation": {
            "maxLength": 25,
            "customErrorMsg": "Note troppo lunghe (max 60 caratteri)"
          }
        },
        {
          "component": "reference",
          "valueType": "string",
          "name": "image",
          "label": "Immagine",
          "multi": false,
          "required": true
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "imageSR",
          "label": "Testo alternativo per l'immagine",
          "required": true
        },
        {
          "component": "select",
          "name": "categoryChipCategory",
          "label": "Categoria",
          "required": true,
          "value": "mobility",
          "options": [
            {
              "name": "Veicoli e Mobilità",
              "value": "mobility"
            },
            {
              "name": "Casa e Famiglia",
              "value": "property"
            },
            {
              "name": "Salute",
              "value": "welfare"
            }
          ]
        },
        {
          "component": "select",
          "name": "firstCategoryChipIcon",
          "label": "Prima Icona Category Chip",
          "required": true,
          "description": "Seleziona l'icona",
          "options": [
            [
              {
                "name": "Animali",
                "value": "un-icon-pets"
              },
              {
                "name": "Auto",
                "value": "un-icon-car"
              },
              {
                "name": "Famiglia",
                "value": "un-icon-family"
              },
              {
                "name": "Infortuni",
                "value": "un-icon-injury"
              },
              {
                "name": "Mezzi pesanti",
                "value": "un-icon-truck"
              },
              {
                "name": "Mobilità",
                "value": "un-icon-mobility"
              },
              {
                "name": "Moto",
                "value": "un-icon-motorcycle"
              },
              {
                "name": "Pensione",
                "value": "un-icon-pension"
              },
              {
                "name": "Salute",
                "value": "un-icon-health"
              },
              {
                "name": "Viaggi",
                "value": "un-icon-travel"
              }
            ]
          ]
        },
        {
          "component": "text",
          "name": "firstCategoryChipDescription",
          "label": "Testo Prima Category Chip",
          "required": true
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "category-card",
      "components": []
    }
  ]
}
