{
  "definitions": [
    {
      "title": "Image Text Grid",
      "id": "image-text-grid",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Image Text Grid",
              "filter": "image-text-grid",
              "model": "image-text-grid"
            }
          }
        }
      }
    },
    {
      "title": "Image Text Item",
      "id": "image-text-item",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Image Text Item",
              "model": "image-text-item"
            }
          }
        }
      }
    }
  ],

  "models": [
    {
      "id": "image-text-grid",
      "fields": [
        {
          "component": "select",
          "label": "Allineamento immagine iniziale",
          "name": "initialAlignment",
          "valueType": "string",
          "options": [
            { "value": "left", "name": "Sinistra" },
            { "value": "right", "name": "Destra" }
          ],
          "required": true
        }
      ]
    },

    {
      "id": "image-text-item",
      "fields": [
        {
          "component": "aem-content",
          "label": "Immagine",
          "name": "image",
          "valueType": "string",
          "required": true
        },
        {
          "component": "text",
          "label": "Titolo",
          "name": "title",
          "valueType": "string",
          "validation": {
            "maxLength": 50,
            "customErrorMsg": "Testo troppo lungo (max 50 caratteri)"
          }
        },
        {
          "component": "text",
          "label": "Descrizione",
          "name": "description",
          "valueType": "string",
          "validation": {
            "maxLength": 240,
            "customErrorMsg": "Testo troppo lungo (max 240 caratteri)"
          }
        },
        {
          "component": "container",
          "name": "buttonConfig",
          "label": "Configurazione Pulsante",
          "collapsible": true,
          "fields": [
            {
              "...": "../atoms/buttons/standard-button/_standard-button.json#/models/standard-button/fields"
            }
          ]
        }
      ]
    }
  ],

  "filters": [
    {
      "id": "image-text-grid",
      "components": [
        "image-text-item"
      ],
      "min": 1,
      "max": 4
    }
  ]
}
