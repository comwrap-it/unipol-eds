{
  "definitions": [
    {
      "title": "Mini Hero",
      "id": "mini-hero",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Mini Hero",
              "model": "mini-hero"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "mini-hero",
      "fields": [
        {
          "component": "reference",
          "valueType": "string",
          "name": "miniHeroBackgroundMediaSrc",
          "label": "Mini Hero Background Media",
          "description": "URL of the background image or video"
        },
        {
          "component": "boolean",
          "name": "isVideoBackground",
          "label": "Is Video Background",
          "description": "Toggle to enable or disable video background",
          "valueType": "boolean"
        },
        {
          "component": "text",
          "label": "Mini Hero Title",
          "name": "miniHeroMainLabel",
          "required": true,
          "validation": {
            "maxLength": 50,
            "customErrorMsg": "Testo troppo lungo"
          }
        },
        {
          "component": "text",
          "name": "miniHeroSubtitle",
          "label": "Mini Hero Subtitle",
          "validation": {
            "maxLength": 50,
            "customErrorMsg": "Testo troppo lungo"
          }
        },
        {
          "component": "boolean",
          "name": "showMiniHeroBulletList",
          "label": "Show Mini Hero Bullet List",
          "description": "Enable up to 3 bullet points",
          "valueType": "boolean"
        },
        {
          "component": "text",
          "name": "miniHeroBullet1",
          "label": "Bullet 1",
          "validation": {
            "maxLength": 40,
            "customErrorMsg": "Testo troppo lungo"
          },
          "condition": {
            "===": [
              {
                "var": "showMiniHeroBulletList"
              },
              true
            ]
          }
        },
        {
          "component": "text",
          "name": "miniHeroBullet2",
          "label": "Bullet 2",
          "validation": {
            "maxLength": 40,
            "customErrorMsg": "Testo troppo lungo"
          },
          "condition": {
            "===": [
              {
                "var": "showMiniHeroBulletList"
              },
              true
            ]
          }
        },
        {
          "component": "text",
          "name": "miniHeroBullet3",
          "label": "Bullet 3",
          "validation": {
            "maxLength": 40,
            "customErrorMsg": "Testo troppo lungo"
          },
          "condition": {
            "===": [
              {
                "var": "showMiniHeroBulletList"
              },
              true
            ]
          }
        },
        {
          "component": "boolean",
          "name": "showMiniHeroButton",
          "label": "Show Mini Hero Button",
          "description": "Toggle to show or hide the mini hero button",
          "valueType": "boolean"
        },
        {
          "component": "container",
          "name": "mini-hero-button-container",
          "label": "Configurazione Pulsante",
          "collapsible": true,
          "fields": [
            {
              "...": "../atoms/buttons/standard-button/_standard-button.json#/models/standard-button/fields"
            }
          ]
        }
      ]
    }
  ],
  "filters": []
}