{
  "definitions": [
    {
      "title": "Hero",
      "id": "hero",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Hero",
              "model": "hero"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "hero",
      "fields": [
        {
          "component": "reference",
          "valueType": "string",
          "name": "heroBackgroundMediaSrc",
          "label": "Hero Background Media",
          "description": "URL of the background image or video"
        },
        {
          "component": "boolean",
          "name": "isVideoBackground",
          "label": "Is Video Background",
          "description": "Toggle to enable or disable video background",
          "valueType": "boolean"
        },
        {
          "component": "boolean",
          "name": "showHeroLogo",
          "label": "Show Hero Logo",
          "description": "Toggle to show or hide the hero logo",
          "valueType": "boolean"
        },
        {
          "component": "reference",
          "valueType": "string",
          "name": "heroLogoMediaSrc",
          "label": "Hero Logo Media",
          "description": "URL of the logo image",
          "condition": {
            "===": [
              {
                "var": "showHeroLogo"
              },
              true
            ]
          }
        },
        {
          "component": "text",
          "label": "Hero Title",
          "name": "heroMainLabel",
          "required": true,
          "validation": {
            "maxLength": 50,
            "customErrorMsg": "Testo troppo lungo"
          }
        },
        {
          "component": "text",
          "name": "heroSubtitleBold",
          "label": "Hero Subtitle Bold",
          "validation": {
            "maxLength": 50,
            "customErrorMsg": "Testo troppo lungo"
          }
        },
        {
          "component": "richtext",
          "name": "heroSubtitle",
          "label": "Hero Subtitle",
          "valueType": "string",
          "validation": {
            "maxLength": 150,
            "customErrorMsg": "Testo troppo lungo"
          }
        },
        {
          "component": "boolean",
          "name": "showHeroBulletList",
          "label": "Show Hero Bullet List",
          "description": "Enable up to 3 bullet points",
          "valueType": "boolean"
        },
        {
          "component": "text",
          "name": "heroBullet1",
          "label": "Bullet 1",
          "validation": {
            "maxLength": 40,
            "customErrorMsg": "Testo troppo lungo"
          },
          "condition": {
            "===": [
              {
                "var": "showHeroBulletList"
              },
              true
            ]
          }
        },
        {
          "component": "text",
          "name": "heroBullet2",
          "label": "Bullet 2",
          "validation": {
            "maxLength": 40,
            "customErrorMsg": "Testo troppo lungo"
          },
          "condition": {
            "===": [
              {
                "var": "showHeroBulletList"
              },
              true
            ]
          }
        },
        {
          "component": "text",
          "name": "heroBullet3",
          "label": "Bullet 3",
          "validation": {
            "maxLength": 40,
            "customErrorMsg": "Testo troppo lungo"
          },
          "condition": {
            "===": [
              {
                "var": "showHeroBulletList"
              },
              true
            ]
          }
        },
        {
          "component": "boolean",
          "name": "showHeroButton",
          "label": "Show Hero Button",
          "description": "Toggle to show or hide the hero button",
          "valueType": "boolean"
        },
        {
          "component": "container",
          "name": "hero-button-container",
          "label": "Configurazione Pulsante",
          "collapsible": true,
          "fields": [
            {
              "...": "../atoms/buttons/standard-button/_standard-button.json#/models/standard-button/fields"
            }
          ]
        }
      ]
    }
  ],
  "filters": []
}